{
	"enabled": false,
    "code": "cacaoliquidportion",
    "class": "ItemLiquidPortion",
    // Same as cacaotablet, as this represents the melted version
    "variantgroups": [
        // Whether the Dutch process was performed.
        { "code": "process", "states": [ "natural" ] }, // TODO: add "alkalized" and "ultra-alkalized".
        // Basic chocolate types.
        { "code": "type", "states": [ "pure", "dark" ] } ,// TODO: add "dark", "milk", "white", "compounddark", and "compoundmilk"
        // How finely the chocolate was ground/mixed/conched, and whether it was tempered.
        { "code": "consistency", "states": [ "grainy" ] }, // TODO: add "smooth" and "tempered".
		// Whether it's cooled in the container.
		{ "code": "state", "states": [ "hot", "cold" ] }
    ],
    "skipVariants": [ // TODO: Prevent "compound" and "tempered" combos, as well as combos of any process but "natural" with white chocolate

    ],
    "matterState": "liquid",

    "shape": { "base": "game:item/liquid" },
    "textureByType": {
        "*": { "base": "block/food/cacao/fill-{process}-{type}-{consistency}"}
    },

    "attributes": {
        "handbookByType": {
			"*-hot": {
				"ignoreCreativeInvStacks": true,
				"groupBy": ["cacaoliquidportion-*"]
			},
			"*-cold": {
				"ignoreCreativeInvStacks": true,
				"exclude": true,
			}
        },
        "waterTightContainerPropsByType": {
			"*-hot": {
				"nutritionPropsPerLitre": {
					"satiety": 600, 
					"foodcategory": "Protein"
				},
				"containable": true,
				"itemsPerLitre": 100,
				"texture": { 
					"base": "block/food/cacao/fill-{process}-{type}-{consistency}",
					"alphaByType": {
						"*" : 255
					}
				},
				"isOpaqueByType": {
					"*": true
				},
				"allowSpill": true,
				"whenSpilled": { 
					"action": "DropContents",
					"stack": { "type": "item", "code": "lifewayscacao:cacaoliquidportion-{process}-{type}-{consistency}-{state}" } 
				}
			},
			"*-cold": {
				"containable": true,
				"itemsPerLitre": 10,
				"texture": { 
					"base": "block/food/cacao/fill-{process}-{type}-{consistency}",
					"alphaByType": {
						"*" : 255
					}
				},
				"isOpaqueByType": {
					"*": true
				},
				"allowSpill": true,
				"whenSpilled": { 
					"action": "DropContents",
					"stack": { "type": "item", "code": "lifewayscacao:cacaotablet-{process}-{type}-{consistency}" } 
				}
			}
        }
    },

    "creativeinventoryStacks": [ { "tabs": ["general", "liquids"], "stacks": [ { "type": "block", "code": "game:woodbucket", "attributes": { "ucontents": [ { "type":"item", "code": "lifewayscacao:cacaoliquidportion-{process}-{type}-{consistency}-{state}", "makefull": true } ] } } ] } ],
	"maxstacksize": 5000,
	"materialDensity": 1300,

	"transitionablePropsByType": {
        "*-hot": [
			{
				"type": "Perish",
				"freshHours": { "avg": 2160 },
				"transitionhours": { "avg": 224 },
				"transitionedStack": { "type": "item", "code": "game:rot" },
				"transitionRatio": 0.25
			},
			{
				"type": "Harden",
				"freshHours": { "avg": 8 },
				"transitionHours": { "avg": 0.01 },
				"transitionedStack": { "type": "item", "code": "lifewayscacao:cacaoliquidportion-{process}-{type}-{consistency}-cold" },
				"transitionRatio": 0.1
			}
        ]
    },

    "guiTransform": {
		"translation": { "x": 0, "y": 1, "z": 0 },
		"rotation": { "x": 123, "y": -33, "z": -13 },
		"origin": { "x": 0.5, "y": 0, "z": 0.5 },
		"scale": 1.4
	},
	"fpHandTransform": {
		"translation": { "x": 0, "y": 0, "z": 0 },
		"rotation": { "x": 25, "y": 157, "z": -5 }
	},
	"tpHandTransform": {
		"translation": { "x": -1.5, "y": -1, "z": -1.4 }
	}
}
